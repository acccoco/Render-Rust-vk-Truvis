#pragma once
#include "bindless.slangi"

/// resolve pass 将指定的 image 按照给定的 offset 和 size 绘制到 color attachment
namespace resolve
{

/// Push constant 参数
struct PushConstant
{
    /// 在 color attachment 上的偏移量（像素坐标）
    float2 offset;
    /// 绘制区域的大小（像素尺寸）
    float2 size;

    /// color attachment 的尺寸（用于归一化计算）
    float2 target_size;
    /// 源图像的 bindless texture handle
    SrvHandle src_texture;
    /// 采样器类型
    ESamplerType sampler_type;
};

};
