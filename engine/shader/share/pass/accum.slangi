#include "share/__common.slangi"

/// 累积 Pass 的数据定义
/// 将单帧 RT 结果累积到 accum_image 中
namespace accum
{

static const int SHADER_X = 8;
static const int SHADER_Y = 8;

struct PushConstant
{
    /// 单帧 RT 输出（只读）
    UavHandle single_frame_input;
    /// 累积结果（读写）
    UavHandle accum_output;

    /// 图像尺寸
    uint2 image_size;
    /// 累积帧数（0 表示第一帧，直接复制）
    uint accum_frames;
    uint _padding_;
};
};
