#pragma once
#include "common.slangi"

/// 单个点光源
struct PointLight
{
    float3 pos;
    float _pos_padding;

    float3 color;
    float _color_padding;
};

struct SpotLight
{
    float3 pos;
    float inner_angle;

    float3 color;
    float outer_angle;

    float3 dir;
    float _dir_padding;
};

/// 场景中所有的点光源
struct LightData
{
    /// 0: point light, 1: spot light
    uint4 light_count;
    PointLight lights[256];
    SpotLight spot_lights[256];
};
