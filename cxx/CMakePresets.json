{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "configurePresets": [
    {
      "name": "vs2022",
      "displayName": "Visual Studio 2022 (x64)",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "set"
      },
      "binaryDir": "${sourceDir}/build/vs2022",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/build/output/Debug",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/build/output/Debug",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/build/output/Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/build/output/Release",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/build/output/Release",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/build/output/Release"
      }
    },
    {
      "name": "clang-cl-base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      }
    },
    {
      "name": "clang-cl-debug",
      "displayName": "Clang-CL Debug (x64)",
      "inherits": "clang-cl-base",
      "binaryDir": "${sourceDir}/build/clang-cl/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/output/Debug",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/output/Debug",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/output/Debug"
      }
    },
    {
      "name": "clang-cl-release",
      "displayName": "Clang-CL Release (x64)",
      "inherits": "clang-cl-base",
      "binaryDir": "${sourceDir}/build/clang-cl/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/output/Release",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/output/Release",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/output/Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs2022-build-debug",
      "configurePreset": "vs2022",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-build-release",
      "configurePreset": "vs2022",
      "configuration": "Release"
    },
    {
      "name": "clang-cl-build-debug",
      "configurePreset": "clang-cl-debug"
    },
    {
      "name": "clang-cl-build-release",
      "configurePreset": "clang-cl-release"
    }
  ]
}
